<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "メシタベ！" %></title>
    <% if @food.present? %>
      <meta property="og:image" content="<%= "#{request.base_url}#{asset_path("foods/#{@food.food_image}.png")}" %>">
      <meta property="og:title" content="今日は<%= @food.name %>にしようかな！">
      <meta property="og:description" content="食事ルーレットで今日のご飯を決めよう！">
    <% end %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= favicon_link_tag '/favicon.png', rel: 'icon', type: 'image/png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

    <!-- meta_tag -->
    <%= display_meta_tags %>
  </head>

  <body>
  <% if flash[:alert] %>
    <div style="background-color: #f8d7da; color: #721c24; padding: 1rem; text-align: center;">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= yield %>

  </body>
</html>
