<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="bg-white w-full max-w-md sm:max-w-lg md:max-w-xl lg:max-w-2xl p-6 sm:p-10 md:p-12 rounded-2xl shadow-xl text-center">
    <% if @food.present? %>
        <h2 class="text-2xl sm:text-4xl md:text-5xl font-extrabold text-gray-800 mb-8 tracking-wide"><%= @food.name %></h2>
    <br>
    <%= image_tag "foods/#{@food.food_image}.png", width: '500', height: '500', class: "mx-auto mb-6" %>

    <p class="text-2xl font-extrabold text-gray-800 mb-8 tracking-wide"><%= @food.comment %></p>
    <br><br>
    <div>
      <%#= button_to 'もう一回', results_path, method: :post, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white text-base sm:text-lg font-medium py-3 px-6 sm:px-8 rounded-full transition duration-300" %>
      <%#= button_to 'Xに投稿', "https://x.com/intent/tweet?text=今日は#{@food.name} にしようかな！｜食事ルーレット &url=https://find-eat-f0bl.onrender.com/#{@result.slug}", class: "inline-block bg-blue-600 hover:bg-blue-700 text-white text-base sm:text-lg font-medium py-3 px-6 sm:px-8 rounded-full transition duration-300" %>
      <%= form_with url: results_path, method: :post, class: "inline-block mr-4" do %>
        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white text-base sm:text-lg font-medium py-3 px-6 sm:px-8 rounded-full transition duration-300">
        メニュー変更
        </button>
      <% end %>
      <%= link_to "Xに投稿", 
      "https://x.com/intent/tweet?text=今日は#{@food.name} にしようかな！&url=https://find-eat-f0bl.onrender.com/#{@result.slug}", 
      class: "inline-block bg-blue-600 hover:bg-blue-700 text-white text-base sm:text-lg font-medium py-3 px-6 sm:px-8 rounded-full transition duration-300", 
      target: "_blank", rel: "noopener" %>
    </div>
    <% else %>
      <h2>食事情報が見つかりません</h2>
    <% end %>
  </div>
</div>